# ViMax Backend Environment Variables

# Google AI API Keys
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter API (for alternative LLM models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Working Directories
IDEA2VIDEO_WORKING_DIR=.working_dir/idea2video
SCRIPT2VIDEO_WORKING_DIR=.working_dir/script2video

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=False

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
CHAT_MODEL_MAX_REQUESTS_PER_MINUTE=500
CHAT_MODEL_MAX_REQUESTS_PER_DAY=2000
IMAGE_MAX_REQUESTS_PER_MINUTE=10
IMAGE_MAX_REQUESTS_PER_DAY=500
VIDEO_MAX_REQUESTS_PER_MINUTE=2
VIDEO_MAX_REQUESTS_PER_DAY=10

# Logging
LOG_LEVEL=INFO
